<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backround"
    >

    <ImageButton
        android:id="@+id/button_refresh_userlist"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/refreshuser"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/button_newUser"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_ringtone"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/ringtone"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/button_refresh_userlist"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_connectedto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="Users"
        android:textColor="@android:color/black"
        android:textSize="33sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/recycler_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/userlistarea"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@+id/button_refresh_userlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_userlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="20dp" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/button_newUser"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/newuser"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>